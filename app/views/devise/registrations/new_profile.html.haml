.signupBody
  = render partial: 'header'

  .signupWrapper
    .signupWrapper__head
      %h2 本人確認情報入力
    .signupWrapper__content
      = form_for(@profile, url: profiles_path) do |f|
        = render "devise/shared/error_messages", resource: @profile
        
        .signupWrapper__content__formGroup
          = f.label :お名前（全角）, class: 'signupWrapper__content__formGroup__label'
          %span.signupWrapper__content__formGroup__label--must 必須
          %br/
          = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'signupWrapper__content__formGroup__form--half', placeholder: '例) 振間'
          = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'signupWrapper__content__formGroup__form--half', placeholder: '例) 太郎'
        
        .signupWrapper__content__formGroup
          = f.label :お名前かな（全角）, class: 'signupWrapper__content__formGroup__label'
          %span.signupWrapper__content__formGroup__label--must 必須
          %br/
          = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'signupWrapper__content__formGroup__form--half', placeholder: '例) ふりま'
          = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'signupWrapper__content__formGroup__form--half', placeholder: '例) たろう'
        
        .signupWrapper__content__formGroup
          = f.label :生年月日, class: 'signupWrapper__content__formGroup__label'
          %span.signupWrapper__content__formGroup__label--must 必須
          %br/
          -# != sprintf(f.date_select（:birth_day, birth_month: true, birth_year:1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), date_separator: '%s'), '年', '月')+'日'
          -# = raw sprintf(f.date_select(:birth_day,{ use_month_numbers: true, start_year: 2020, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), date_separator: '%s'}), '年', '月')+'日'
          = raw sprintf(f.date_select(:birth_day,{ use_month_numbers: true, start_year: Date.today.year, end_year: Date.today.year-120,  date_separator: '%s'}), '年', '月')+'日'
        .signupWrapper__content__submit
          = f.submit "商品送付先住所情報入力へ進む" ,class: 'signupWrapper__content__submit__btn'
          
  = render partial: 'footer'
  